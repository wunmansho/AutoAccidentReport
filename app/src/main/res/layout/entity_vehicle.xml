<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl01"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/ab01">

    <ScrollView
        style="@style/scrollbar_shape_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvXX_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvXX_AID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:visibility="gone" />
        <LinearLayout
            android:id="@+id/add_device_vehicle_ll00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:elevation="0dp"
                    android:text="@string/vehicle_type"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/vehicle_type_spinner"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:inputType="text"
                    android:paddingTop="0dp"
                    android:prompt="@string/vehicle_type"
                    android:textAlignment="viewStart"
                    android:textSize="12sp"
                    android:visibility="visible" />


            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/ll01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="20sp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight=".2"
                        android:elevation="0dp"
                        android:gravity="top"
                        android:labelFor="@+id/tieXX_YEAR"
                        android:text="@string/tv0034"
                        android:textAlignment="gravity"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <ImageButton
                        android:id="@+id/bullHornYearOff"
                        android:layout_width="24dp"
                        android:layout_height="24dp"

                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="false"
                        android:layout_centerInParent="false"
                        android:layout_centerVertical="false"
                        android:layout_marginEnd="5dp"
                        android:layout_weight=".1"
                        android:backgroundTint="@color/white"
                        android:soundEffectsEnabled="false"
                        android:tint="@color/colorToolbarBlue"
                        app:srcCompat="@drawable/ic_bullhorn_black_r_off24dp"
                        android:contentDescription="@string/todo" />

                    <ImageButton
                        android:id="@+id/bullHornYearOn"
                        android:layout_width="24dp"
                        android:layout_height="24dp"

                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="false"
                        android:layout_centerInParent="false"
                        android:layout_centerVertical="false"
                        android:layout_marginEnd="5dp"
                        android:layout_weight=".1"
                        android:backgroundTint="@color/white"
                        android:soundEffectsEnabled="false"
                        android:tint="@color/colorToolbarBlue"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_bullhorn_black_r_on24dp"
                        android:contentDescription="@string/todo" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="20sp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight=".4"
                        android:elevation="0dp"

                        android:gravity="top"
                        android:labelFor="@+id/tieXX_MAKE"
                        android:text="@string/tv0035"
                        android:textAlignment="gravity"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <ImageButton
                        android:id="@+id/bullHornMakeOff"
                        android:layout_width="24dp"
                        android:layout_height="24dp"

                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="false"
                        android:layout_centerInParent="false"
                        android:layout_centerVertical="false"
                        android:layout_marginEnd="5dp"
                        android:layout_weight=".1"
                        android:backgroundTint="@color/white"
                        android:soundEffectsEnabled="false"
                        android:tint="@color/colorToolbarBlue"
                        app:srcCompat="@drawable/ic_bullhorn_black_r_off24dp"
                        android:contentDescription="@string/todo" />

                    <ImageButton
                        android:id="@+id/bullHornMakeOn"
                        android:layout_width="24dp"
                        android:layout_height="24dp"

                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="false"
                        android:layout_centerInParent="false"
                        android:layout_centerVertical="false"
                        android:layout_marginEnd="5dp"
                        android:layout_weight=".1"
                        android:backgroundTint="@color/white"
                        android:soundEffectsEnabled="false"
                        android:tint="@color/colorToolbarBlue"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_bullhorn_black_r_on24dp"
                        android:contentDescription="@string/todo" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="20sp"
                        android:layout_marginEnd="5dp"

                        android:layout_marginStart="5dp"
                        android:layout_weight=".5"
                        android:elevation="0dp"
                        android:gravity="top"
                        android:labelFor="@+id/tieXX_MODEL"
                        android:text="@string/tv0036"
                        android:textAlignment="gravity"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <ImageButton
                        android:id="@+id/bullHornModelOff"
                        android:layout_width="24dp"
                        android:layout_height="24dp"

                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="false"
                        android:layout_centerInParent="false"
                        android:layout_centerVertical="false"
                        android:layout_marginEnd="5dp"
                        android:backgroundTint="@color/white"
                        android:soundEffectsEnabled="false"
                        android:tint="@color/colorToolbarBlue"
                        app:srcCompat="@drawable/ic_bullhorn_black_r_off24dp"
                        android:contentDescription="@string/todo" />

                    <ImageButton
                        android:id="@+id/bullHornModelOn"
                        android:layout_width="24dp"
                        android:layout_height="24dp"

                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="false"
                        android:layout_centerInParent="false"
                        android:layout_centerVertical="false"
                        android:layout_marginEnd="5dp"
                        android:backgroundTint="@color/white"
                        android:soundEffectsEnabled="false"
                        android:tint="@color/colorToolbarBlue"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_bullhorn_black_r_on24dp"
                        android:contentDescription="@string/todo" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/tieXX_YEAR"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight=".3"
                        android:inputType="textCapWords"
                        android:paddingTop="0dp"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/tieXX_MAKE"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="5dp"
                        android:layout_weight=".5"
                        android:inputType="textCapWords"
                        android:paddingTop="0dp"
                        android:textSize="12sp" />


                    <EditText
                        android:id="@+id/tieXX_MODEL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart=".5dp"
                        android:layout_weight=".5"
                        android:inputType="textCapWords"
                        android:paddingTop="0dp"
                        android:textSize="12sp" />


                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tagLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="20sp"

                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:elevation="0dp"
                        android:gravity="top"
                        android:labelFor="@+id/tieXX_TAG"
                        android:text="@string/tv0030"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:id="@+id/llbullHornPlate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@+id/tagLabel"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/bullHornPlateOff"
                            android:layout_width="24dp"
                            android:layout_height="24dp"

                            android:layout_alignParentEnd="false"
                            android:layout_alignParentTop="false"
                            android:layout_centerInParent="false"
                            android:layout_centerVertical="false"
                            android:layout_marginEnd="5dp"
                            android:backgroundTint="@color/white"
                            android:soundEffectsEnabled="false"
                            android:tint="@color/colorToolbarBlue"
                            app:srcCompat="@drawable/ic_bullhorn_black_r_off24dp"
                            android:contentDescription="@string/todo" />

                        <ImageButton
                            android:id="@+id/bullHornPlateOn"
                            android:layout_width="24dp"
                            android:layout_height="24dp"

                            android:layout_alignParentEnd="false"
                            android:layout_alignParentTop="false"
                            android:layout_centerInParent="false"
                            android:layout_centerVertical="false"
                            android:layout_marginEnd="5dp"
                            android:backgroundTint="@color/white"
                            android:soundEffectsEnabled="false"
                            android:tint="@color/colorToolbarBlue"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_bullhorn_black_r_on24dp"
                            android:contentDescription="@string/todo" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/countryLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="20sp"

                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/llbullHornPlate"
                        android:elevation="0dp"
                        android:gravity="top"
                        android:labelFor="@+id/tieXX_STATE"
                        android:text="@string/license_plate_country"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/tieXX_TAG"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"

                        android:layout_weight=".3"
                        android:inputType="text"
                        android:paddingTop="0dp"
                        android:textAlignment="viewStart"
                        android:textSize="12sp" />

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/ccpXX_PLATE_COUNTRY"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7"
                        app:ccp_autoDetectCountry="true"
                        app:ccp_autoDetectLanguage="true"
                        app:ccp_showNameCode="true"
                        app:ccp_showPhoneCode="false"
                        app:ccp_textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="20sp"
                        android:layout_marginStart="5dp"

                        android:layout_weight=".7"
                        android:elevation="0dp"
                        android:gravity="top"
                        android:labelFor="@+id/tieXX_STATE"
                        android:text="@string/tv0031"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <ImageButton
                        android:id="@+id/bullHornStateOff"
                        android:layout_width="24dp"
                        android:layout_height="24dp"

                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="false"
                        android:layout_centerInParent="false"
                        android:layout_centerVertical="false"
                        android:layout_marginEnd="5dp"
                        android:backgroundTint="@color/white"
                        android:soundEffectsEnabled="false"
                        android:tint="@color/colorToolbarBlue"
                        app:srcCompat="@drawable/ic_bullhorn_black_r_off24dp"
                        android:contentDescription="@string/todo" />

                    <ImageButton
                        android:id="@+id/bullHornStateOn"
                        android:layout_width="24dp"
                        android:layout_height="24dp"

                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="false"
                        android:layout_centerInParent="false"
                        android:layout_centerVertical="false"
                        android:layout_marginEnd="5dp"
                        android:backgroundTint="@color/white"
                        android:soundEffectsEnabled="false"
                        android:tint="@color/colorToolbarBlue"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_bullhorn_black_r_on24dp"
                        android:contentDescription="@string/todo" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/tieXX_STATE"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"

                        android:layout_weight=".7"
                        android:inputType="textCapWords|textPersonName"
                        android:paddingTop="0dp"
                        android:textAlignment="viewStart"
                        android:textSize="12sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="20sp"
                            android:layout_marginEnd="5dp"

                            android:layout_marginStart="5dp"
                            android:layout_weight=".3"
                            android:elevation="0dp"
                            android:gravity="top"
                            android:labelFor="@+id/tieXX_EXPIRATION"
                            android:text="@string/tv0032"
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />

                        <ImageButton
                            android:id="@+id/bullHornExpOff"
                            android:layout_width="24dp"
                            android:layout_height="24dp"

                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="false"
                            android:layout_centerInParent="false"
                            android:layout_centerVertical="false"
                            android:layout_marginEnd="5dp"
                            android:backgroundTint="@color/white"
                            android:soundEffectsEnabled="false"
                            android:tint="@color/colorToolbarBlue"
                            app:srcCompat="@drawable/ic_bullhorn_black_r_off24dp"
                            android:contentDescription="@string/todo" />

                        <ImageButton
                            android:id="@+id/bullHornExpOn"
                            android:layout_width="24dp"
                            android:layout_height="24dp"

                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="false"
                            android:layout_centerInParent="false"
                            android:layout_centerVertical="false"
                            android:layout_marginEnd="5dp"
                            android:backgroundTint="@color/white"
                            android:soundEffectsEnabled="false"
                            android:tint="@color/colorToolbarBlue"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_bullhorn_black_r_on24dp"
                            android:contentDescription="@string/todo" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvXX_VIN"
                            android:layout_width="0dp"
                            android:layout_height="20sp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_weight=".7"
                            android:elevation="0dp"
                            android:gravity="top"
                            android:labelFor="@+id/tieXX_VIN"
                            android:text="@string/tv0033"
                            android:textAlignment="gravity"
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />

                        <ImageButton
                            android:id="@+id/bullHornVinOff"
                            android:layout_width="24dp"
                            android:layout_height="24dp"

                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="false"
                            android:layout_centerInParent="false"
                            android:layout_centerVertical="false"
                            android:layout_marginEnd="5dp"
                            android:backgroundTint="@color/white"
                            android:soundEffectsEnabled="false"
                            android:tint="@color/colorToolbarBlue"
                            app:srcCompat="@drawable/ic_bullhorn_black_r_off24dp"
                            android:contentDescription="@string/todo" />

                        <ImageButton
                            android:id="@+id/bullHornVinOn"
                            android:layout_width="24dp"
                            android:layout_height="24dp"

                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="false"
                            android:layout_centerInParent="false"
                            android:layout_centerVertical="false"
                            android:layout_marginEnd="5dp"
                            android:backgroundTint="@color/white"
                            android:soundEffectsEnabled="false"
                            android:tint="@color/colorToolbarBlue"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_bullhorn_black_r_on24dp"
                            android:contentDescription="@string/todo" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/tieXX_EXPIRATION"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"

                            android:layout_weight=".3"
                            android:inputType="textCapWords|textPersonName"
                            android:paddingTop="0dp"
                            android:textAlignment="viewStart"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/tieXX_VIN"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_weight=".7"
                            android:inputType="text"
                            android:paddingTop="0dp"
                            android:textSize="12sp" />
                    </LinearLayout>


                </LinearLayout>


                <TextView
                    android:id="@+id/tvXX_CUID"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvXX_CDATE"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvXX_UUID"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvXX_UDATE"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:visibility="gone" />
