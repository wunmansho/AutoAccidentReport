<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:backgroundTintMode="screen">

    <RelativeLayout
        android:id="@+id/rl01"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/ll01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/ll02"
            android:background="@color/colorToolbarBlue"
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnGallery"
                android:layout_width="36dp"
                android:layout_height="36dp"

                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:contentDescription="@string/todo"
                app:backgroundTint="@color/colorToolbarBlue"
                app:fabSize="mini"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_photo_album_white_24dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnMedia"
                android:layout_width="36dp"
                android:layout_height="36dp"

                android:layout_margin="10dp"
                android:contentDescription="@string/todo"
                app:backgroundTint="@color/colorToolbarBlue"
                app:fabSize="mini"
                app:srcCompat="@drawable/media_32dp" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnCamera"
                android:layout_width="36dp"
                android:layout_height="36dp"

                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:contentDescription="@string/todo"
                android:visibility="invisible"
                app:backgroundTint="@color/colorToolbarBlue"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_add_a_photo_white_24dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ll01"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDV_ID"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/todo"
                android:visibility="gone" />


            <TextView
                android:id="@+id/tvDV_YEAR"
                style="@android:style/Widget.Material.ListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/todo"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvDV_MAKE"
                style="@android:style/Widget.Material.ListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvDV_YEAR"
                android:layout_marginStart="10dp"
                android:text="@string/todo"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvDV_MODEL"
                style="@android:style/Widget.Material.ListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"


                android:layout_below="@+id/tvDV_MAKE"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:text="@string/todo"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvDV_TYPE"
                style="@android:style/Widget.Material.ListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"


                android:layout_below="@+id/tvDV_MODEL"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:text="@string/todo"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>